<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Phoria.Web</title>
	<link rel="stylesheet" href="~/css/global.css" asp-append-version="true" />

	@await RenderSectionAsync("Styles", required: false)

	@* TODO: Now that PhoriaOptions.ClientEntry exists maybe create a `phoria-island-styles` tag helper *@
	<link rel="stylesheet" phoria-href="ui/src/entry-client.ts" asp-append-version="true" />

	<phoria-island-preload />
</head>
<body>
	<main role="main" id="root">
		@RenderBody()
	</main>

	@* TODO: Now that PhoriaOptions.ClientEntry exists maybe create a `phoria-island-scripts` tag helper *@
	<script type="module" phoria-src="ui/src/entry-client.ts"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
