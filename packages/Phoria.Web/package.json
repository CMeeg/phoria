{
	"name": "phoria.web",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"build": "run-p build:* -c",
		"build:entry-client": "vite build --manifest --ssrManifest --emptyOutDir --outDir ./dist/client",
		"build:entry-server": "vite build --ssr src/entry-server.tsx --emptyOutDir --outDir ./dist/server",
		"build:server": "tsc --project ./tsconfig.server.json",
		"dev": "tsx ./ui/server.ts",
		"lint": "biome check",
		"start": "cross-env NODE_ENV=production PORT=5001 node ./ui/dist/server.js",
		"check": "tsc -b"
	},
	"dependencies": {
		"@phoria/islands": "workspace:*",
		"h3": "catalog:",
		"listhen": "^1.9.0",
		"react": "catalog:",
		"react-dom": "catalog:",
		"svelte": "catalog:",
		"vue": "catalog:"
	},
	"devDependencies": {
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/node": "catalog:",
		"@types/react": "catalog:",
		"@types/react-dom": "catalog:",
		"@vitejs/plugin-react": "^4.3.3",
		"@vitejs/plugin-vue": "^5.0.3",
		"cross-env": "^7.0.3",
		"npm-run-all": "^4.1.5",
		"postcss-preset-env": "^10.0.8",
		"tsx": "^4.19.2",
		"typescript": "catalog:",
		"vite": "catalog:",
		"vite-tsconfig-paths": "catalog:"
	}
}
